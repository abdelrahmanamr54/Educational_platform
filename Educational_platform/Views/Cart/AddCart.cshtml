<body class="course-details-page">



    <main class="main">

        <!-- Page Title -->
        <div class="page-title" data-aos="fade">
            <div class="heading">
                <div class="container">
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-lg-8">
                            <h1>Course Details</h1>
                            <p class="mb-0">Odio et unde deleniti. Deserunt numquam exercitationem. Officiis quo odio sint voluptas consequatur ut a odio voluptatem. Sit dolorum debitis veritatis natus dolores. Quasi ratione sint. Sit quaerat ipsum dolorem.</p>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="breadcrumbs">
                <div class="container">
                    <ol>
                        <li><a href="index.html">Home</a></li>
                        <li class="current">Course Details</li>
                    </ol>
                </div>
            </nav>
        </div><!-- End Page Title -->
        <!-- Courses Course Details Section -->
        <section id="courses-course-details" class="courses-course-details section">

            <div class="container" data-aos="fade-up">

                <div class="row">
                    <div class="col-lg-8">
                        <img src="@Model.ImageUrl" class="img-fluid" alt="">
                        @* <h3>@Model.Name</h3>
                        <p>
                            @Model.Description
                        </p> *@
                    </div>
                    <div class="col-lg-4">

                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h4 class="mx-auto">@Model.Name</h4>
                            @* <p><a href="#"></a></p> *@
                        </div>

                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Price</h5>
                          @*  <p>@Model.Price</p>*@
                        </div>

                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Duration</h5>
                            <p>30</p>
                        </div>
                        <form asp-action="Enroll" method="post" asp-controller="Cart">
                        <div class="course-info">
                            <div class="form-group d-flex justify-content-between align-items-center">
                                <label for="code">Enrollment Code</label>
                                <input type="text" name="code" class="form-control w-50" style="background-color: #f5f5f5" />
                            </div>
                                <div class="form-group d-flex justify-content-between align-items-center">
                                   @* <label for="courseId">Enrollment Code</label>*@
                                    <input type="hidden" value="@Model.Id" name="courseId" class="form-control w-50" style="background-color: #f5f5f5" />
                                  
                                </div>

                        </div>

                            <h3> <a> <button type="submit" class="btn btn-success">Confirm  Order</button></a></h3>
                        </form>

                       @* <div class="form-group">
                            <label for="code">Enrollment Code:</label>
                            <input type="text" name="code" class="form-control" />
                        </div>
                         <label for="courseId">Course ID:</label>
                         <input type="hidden" value="@Model.Id"  name="courseId" class="form-control" />*@
                     

                    </div>
                </div>

            </div>

        </section><!-- /Courses Course Details Section -->


    </main>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

