<body class="course-details-page">

    

    <main class="main">
        
        <!-- Page Title -->
        <div class="page-title" data-aos="fade">
            <div class="heading">
                <div class="container">
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-lg-8">
                            <h1>Course Details</h1>
                            <p class="mb-0">Odio et unde deleniti. Deserunt numquam exercitationem. Officiis quo odio sint voluptas consequatur ut a odio voluptatem. Sit dolorum debitis veritatis natus dolores. Quasi ratione sint. Sit quaerat ipsum dolorem.</p>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="breadcrumbs">
                <div class="container">
                    <ol>
                        <li><la href="/Shared/_Layout">Home</la></li>
                        <li class="current">Course Details</li>
                    </ol>
                </div>
            </nav>
        </div><!-- End Page Title -->
        <!-- Courses Course Details Section -->
        <section id="courses-course-details" class="courses-course-details section">

            <div class="container" data-aos="fade-up">

                <div class="row">
                    <div class="col-lg-8">
                        <img src="@Model.ImageUrl" class="img-fluid" alt=""> <br /> <br />
                        <h5>@Model.Content</h5>
                        <p>
                            @Model.Description
                        </p>
                    </div>
                    <div class="col-lg-4">

                        <div class="course-info d-flex justify-content-center align-items-center">
                            <h5>@Model.Name</h5>
                            
                        </div>

                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Price</h5>
                            <p>@Model.Price EGP</p>
                        </div> 

                       

                       @*  <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Schedule</h5>
                            <p>5.00 pm - 7.00 pm</p>
                        </div> *@

                        <br />

                        <div class="text-center">
                            <a href="/Exam/TakeExam/@Model.ExamId" style="width:100px; background-color: #5fcf80; border: 0; padding: 10px 10px;
transition: 0.4s; margin:auto;color:#ffffff;text-align: center; border-radius: 5px;">Take Exam</a>

                        </div>
                      
                            
                        
                    </div>
                    <br /> <br />
                    
                    @* < width="400" height="315" src="@Model.VideoUrl" frameborder="0" allowfullscreen></> *@
                    <iframe width="100" height="400" src="@Model.VideoUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                </div>
                

            </div>

        </section><!-- /Courses Course Details Section -->
