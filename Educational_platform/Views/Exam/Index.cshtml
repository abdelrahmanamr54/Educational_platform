@model List<Exam>


<p>
    <a href="/Exam/CreateNew">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>


            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">QuestionImg</th>
            <th scope="col">Lecture</th>
            
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var exam = Model[i];
            <tr>
                <td>
                    @Model[i].Name
                </td>
                <td>
                    @Model[i].Description
                </td>
                <td>
                  @*  <img src="@Model[i].QuestionImg" alt="" class="image" width="100">*@
                </td>

                <td>
                    @exam?.Lecture?.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a> |
                    <a href="/Exam/TakeExam/@Model[i].Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Model[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
