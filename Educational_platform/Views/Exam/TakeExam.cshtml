@model Educational_platform.ViewModel.ExamViewModel

<form asp-action="SubmitExam" asp-controller="Exam" method="post">
    <h2>@Model.ExamName</h2>

    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div>
          @*  <p>@Model.Questions[i].Text</p>*@
            @foreach (var choice in Model.Questions[i].Choices)
            {
                <label>
                    <input type="radio" asp-for="@Model.Questions[i].SelectedAnswer" value="@choice" />
                    @choice
                </label>
            }
        </div>
    }
    <button type="submit">Submit</button>
</form>
