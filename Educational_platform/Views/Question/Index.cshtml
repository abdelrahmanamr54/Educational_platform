@model List<Educational_platform.Models.Question>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
<h1>Index</h1>

<p>
    <a asp-action="CreateNew">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>


            <th scope="col">Question Answer</th>
            <th scope="col">Exam</th>
          

            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var q = Model[i];
            <tr>
                <td>
                    @Model[i].QAnswers
                </td>
                

                <td>
                    @q?.exam?.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a> |
                    <a href="/Question/ReadById/@Model[i].Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Model[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

