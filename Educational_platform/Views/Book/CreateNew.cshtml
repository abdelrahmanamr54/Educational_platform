@model Educational_platform.ViewModel.BookVM

@{
    ViewData["Title"] = "CreateNew";
}

<div class="container">
    <h1>CreateNew</h1>



    <div class="row">
        <div class="col-md-4">
            <form method="post" action="/Book/SaveNew">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FilePath" class="control-label"></label>
                    <input asp-for="FilePath" class="form-control" />
                    <span asp-validation-for="FilePath" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="GradeId" class="control-label"></label>
                    <select class="form-select" asp-for="GradeId">
                        @foreach (var item in ViewBag.Grades)
                        {


                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="GradeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" style="width:100px; background-color: #5fcf80; border: 0; padding: 10px 10px;
transition: 0.4s; margin-top:12px;color:#ffffff;text-align: center; border-radius: 45px;" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
